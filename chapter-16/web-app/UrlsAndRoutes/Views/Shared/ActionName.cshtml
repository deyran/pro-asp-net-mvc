<body>
    <div>The controller is: @ViewBag.Controller</div>
    <div>The action is: @ViewBag.Action</div>

    <div>
        @Html.ActionLink(
            "This is an outgoing URL",
            "Index", "Home", null,
            new
            {
                id = "myAnchorID",
                @class = "myCSSClass"
            }
        )
    </div>
